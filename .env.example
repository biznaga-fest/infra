# =============================================================================
# BiznagaFest Infrastructure - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# --- Coolify-managed services ---
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# --- pretix (ticketing) ---
PRETIX_URL=https://tickets.biznagafest.com

# --- Resend (email for pretix + pretalx) ---
RESEND_API_KEY=

# --- n8n (workflow automation) ---
N8N_URL=https://n8n.biznagafest.com
N8N_HOST=n8n.biznagafest.com
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=

# --- Strapi (CMS) ---
STRAPI_URL=https://api.biznagafest.com
STRAPI_API_TOKEN=
